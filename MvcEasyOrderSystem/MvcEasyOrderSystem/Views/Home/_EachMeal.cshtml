@model MvcEasyOrderSystem.Models.Meal

<li>
@Html.DisplayFor(modelItem => modelItem.Image, new { alt = Model.MealName + "圖片" })
<p class="itemName">@Html.DisplayFor(modelItem => modelItem.MealName)</p>
    <p class="itemDetailTxt">
        <text>類別:</text>
                @Html.ActionLink(Model.Category.CategoryName, "ShowByCategory", new { categoryId = Model.CategoryId })
                        <text>餐館:</text>
                @Model.Supplier.CompanyName
    </p>

    <p><tex>價格:</tex><strong>@Html.DisplayFor(modelItem => modelItem.Price)</strong></p>
    <p>@Html.ActionLink("購買", "AddToCart", "ShoppingCart", new { mealId = Model.MealId }, new { @class="addToShoppingCart"})</p>
</li>

