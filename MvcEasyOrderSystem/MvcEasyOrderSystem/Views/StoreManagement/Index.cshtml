@model IEnumerable<MvcEasyOrderSystem.Models.Meal>

@{
    ViewBag.Title = "菜單管理";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("增加菜單", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MealName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MealName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            @Html.ActionLink("修改", "Edit", new { id=item.MealId }) |
            @Html.ActionLink("詳細", "Details", new { id=item.MealId }) |
        </td>
    </tr>
}

</table>
