@model IEnumerable<MvcEasyOrderSystem.Models.Meal>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@foreach (var item in Model)
{
    <article class="meal">

        <div class="meal-picture">
            @Html.DisplayFor(modelItem => item.Image, new { alt = item.MealName + "圖片" });
        </div>
        <div class="meal-detail">
            <section class="meal-info">
                <h2>@Html.DisplayFor(modelItem => item.MealName)</h2>
                <text>類別:</text>
                @Html.ActionLink(item.Category.CategoryName, "ShowByCategory", new { categoryId = item.CategoryId })
            </section>
            <section class="meal-restruantInfo">
                <text>餐館:</text>
                @Html.ActionLink(item.Supplier.CompanyName, "ShowBySupplier", "BrowseBySupplier", new { supplierId = item.SupplierId }, null)
            </section>
            <div>
                <tex>價格:</tex>@Html.DisplayFor(modelItem => item.Price)
            </div>

            <div>
                @Html.ActionLink("購買", "AddToCart", "ShoppingCart", new { mealId = item.MealId }, null)
            </div>
        </div>
    </article>
    
}




